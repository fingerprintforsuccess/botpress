{
  "rules": {
    "curly": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "ordered-imports": {
      "severity": "warning",
      "options": {
        "import-sources-order": "lowercase-first",
        "named-imports-order": "case-insensitive",
        "grouped-imports": true
      }
    },
    "interface-over-type-literal": true,
    "object-literal-shorthand": true,
    "indent": [true, "spaces", 2],
    "one-line": [true, "check-open-brace", "check-whitespace"],
    "no-var-keyword": true,
    "quotemark": [true, "single", "jsx-double", "avoid-escape", "avoid-template"],
    "semicolon": [true, "never", "ignore-bound-class-methods"],
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "no-duplicate-imports": [true, { "allow-namespace-imports": true }],
    "no-console": { "severity": "warning", "options": ["log"] },
    "no-return-await": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ],
    "linebreak-style": [true, "LF"],
    "eofline": true,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-floating-promises": true,
    "prefer-const": true,
    "jsdoc-format": true
  },
  "linterOptions": {
    "exclude": ["**/*.json", "**/*.scss.d.ts"]
  }
}
